<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_approve_inherit" model="ir.ui.view">
        <field name="name">purchase approve</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <button name="button_approve" position="replace" >
                <field name="can_approve" invisible="1" />
                <field name="can_confirm" invisible="1" />
                <button name="button_confirmby" type="object" string="Confirm to Approve"  attrs="{'invisible':[('can_confirm','=',False)]}" />
                <button name="button_approve" type="object" string="Approve Order" class="oe_highlight" attrs="{'invisible':[('can_approve','=',False)]}" />
            </button>
            <notebook>
                <page string="User's Confirmed" attrs="{'invisible': ['&amp;',('can_confirm','=', False),('can_approve','=', False)]}" >
                    <field name="confirmed_ids" readonly='1' >
                        <tree>
                            <field name="name" string="User Confirmed" />
                            <field name="create_date" string="Time Confirm" />
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
